datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id          String   @id @default(uuid())
  cpf         String
  email       String   @unique
  name        String
  streetname  String
  housenumber String
  borough     String
  cityname    String
  cep         String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  product_rent ProductRent[] @relation("client")

  @@map("clients")
}

model Product {
  id           String        @id @default(uuid())
  price        Float
  nameproduct  String        @unique
  qnty         Int
  brand        String
  product_rent ProductRent[] @relation("product")

  @@map("products")
}

model ProductRent {
  client    Client  @relation("client", fields: [clientId], references: [id])
  clientId  String
  product   Product @relation("product", fields: [productId], references: [id])
  productId String

  @@id([clientId, productId])
  @@map("product_rent")
}
